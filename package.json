{
  "name": "api-tester",
  "displayName": "API Tester",
  "icon": "icons/images/apitester-icon.png",
  "description": "A lightweight HTTP client for sending requests and testing APIs",
  "repository": {
    "url": "https://github.com/lien-hung/api-tester"
  },
  "author": {
    "name": "Lien Hung Trinh",
    "url": "https://github.com/lien-hung",
    "email": "lienhungtrinh@gmail.com"
  },
  "version": "2.1.0",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "title": "New Request",
        "command": "api-tester.newRequest",
        "category": "API Tester",
        "icon": {
          "light": "icons/svg/add-light.svg",
          "dark": "icons/svg/add-dark.svg"
        }
      },
      {
        "title": "Open Request",
        "shortTitle": "Open",
        "command": "api-tester.openRequest"
      },
      {
        "title": "Delete",
        "command": "api-tester.deleteRequest",
        "icon": {
          "light": "icons/svg/delete-light.svg",
          "dark": "icons/svg/delete-dark.svg"
        }
      },
      {
        "title": "Rename",
        "command": "api-tester.renameRequest"
      },
      {
        "title": "Save to Collection",
        "command": "api-tester.saveToCollection"
      },
      {
        "title": "Refresh",
        "command": "api-tester.refresh",
        "category": "API Tester",
        "icon": {
          "light": "icons/svg/refresh-light.svg",
          "dark": "icons/svg/refresh-dark.svg"
        }
      },
      {
        "title": "Clear History",
        "command": "api-tester.clearHistory",
        "category": "API Tester",
        "icon": {
          "light": "icons/svg/delete-light.svg",
          "dark": "icons/svg/delete-dark.svg"
        }
      },
      {
        "title": "New Collection",
        "command": "api-tester.newCollection",
        "category": "API Tester",
        "icon": {
          "light": "icons/svg/new-collection-light.svg",
          "dark": "icons/svg/new-collection-dark.svg"
        }
      },
      {
        "title": "Rename",
        "command": "api-tester.renameCollection"
      },
      {
        "title": "Delete",
        "command": "api-tester.deleteCollection"
      },
      {
        "title": "New Request",
        "command": "api-tester.newRequestInCollection",
        "icon": {
          "light": "icons/svg/add-light.svg",
          "dark": "icons/svg/add-dark.svg"
        }
      },
      {
        "title": "Clear Items",
        "command": "api-tester.clearItemsInCollection"
      },
      {
        "title": "Rename",
        "command": "api-tester.renameRequestInCollection"
      },
      {
        "title": "Delete",
        "command": "api-tester.deleteRequestInCollection"
      }
    ],
    "views": {
      "apiTesterActivityBarContainer": [
        {
          "id": "apiTesterRequestHistoryTreeView",
          "name": "Request History",
          "icon": "icons/svg/request-history-view.svg"
        },
        {
          "id": "apiTesterCollectionsTreeView",
          "name": "Collections",
          "icon": "icons/svg/collections-view.svg"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "apiTesterActivityBarContainer",
          "icon": "icons/svg/apitester-sidebar.svg",
          "title": "API Tester"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "apiTesterRequestHistoryTreeView",
        "contents": "Your history collection seems to be empty.\nTo start sending HTTP requests, click the button below.\n[Add Request](command:api-tester.newRequest)"
      },
      {
        "view": "apiTesterCollectionsTreeView",
        "contents": "No collections available yet.\n[New Collection](command:api-tester.newCollection)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "api-tester.openRequest",
          "when": "false"
        },
        {
          "command": "api-tester.deleteRequest",
          "when": "false"
        },
        {
          "command": "api-tester.renameRequest",
          "when": "false"
        },
        {
          "command": "api-tester.saveToCollection",
          "when": "false"
        },
        {
          "command": "api-tester.renameCollection",
          "when": "false"
        },
        {
          "command": "api-tester.deleteCollection",
          "when": "false"
        },
        {
          "command": "api-tester.newRequestInCollection",
          "when": "false"
        },
        {
          "command": "api-tester.clearItemsInCollection",
          "when": "false"
        },
        {
          "command": "api-tester.renameRequestInCollection",
          "when": "false"
        },
        {
          "command": "api-tester.deleteRequestInCollection",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "command": "api-tester.refresh",
          "when": "view == apiTesterRequestHistoryTreeView || view == apiTesterCollectionsTreeView",
          "group": "navigation"
        },
        {
          "command": "api-tester.newRequest",
          "when": "view == apiTesterRequestHistoryTreeView",
          "group": "navigation@1"
        },
        {
          "command": "api-tester.clearHistory",
          "when": "view == apiTesterRequestHistoryTreeView",
          "group": "navigation@2"
        },
        {
          "command": "api-tester.newCollection",
          "when": "view == apiTesterCollectionsTreeView",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "api-tester.deleteRequest",
          "when": "view == apiTesterRequestHistoryTreeView && viewItem == userRequestHistory.item",
          "group": "inline"
        },
        {
          "command": "api-tester.saveToCollection",
          "when": "view == apiTesterRequestHistoryTreeView && viewItem == userRequestHistory.item",
          "group": "a@1"
        },
        {
          "command": "api-tester.renameRequest",
          "when": "view == apiTesterRequestHistoryTreeView && viewItem == userRequestHistory.item",
          "group": "a@2"
        },
        {
          "command": "api-tester.deleteRequest",
          "when": "view == apiTesterRequestHistoryTreeView && viewItem == userRequestHistory.item",
          "group": "a@3"
        },
        {
          "command": "api-tester.newRequestInCollection",
          "when": "view == apiTesterCollectionsTreeView && viewItem == userCollection.collection",
          "group": "inline"
        },
        {
          "command": "api-tester.newRequestInCollection",
          "when": "view == apiTesterCollectionsTreeView && viewItem == userCollection.collection",
          "group": "a"
        },
        {
          "command": "api-tester.renameCollection",
          "when": "view == apiTesterCollectionsTreeView && viewItem == userCollection.collection",
          "group": "b@1"
        },
        {
          "command": "api-tester.deleteCollection",
          "when": "view == apiTesterCollectionsTreeView && viewItem == userCollection.collection",
          "group": "b@2"
        },
        {
          "command": "api-tester.clearItemsInCollection",
          "when": "view == apiTesterCollectionsTreeView && viewItem == userCollection.collection",
          "group": "b@3"
        },
        {
          "command": "api-tester.renameRequestInCollection",
          "when": "view == apiTesterCollectionsTreeView && viewItem == userCollection.item",
          "group": "a@1"
        },
        {
          "command": "api-tester.deleteRequestInCollection",
          "when": "view == apiTesterCollectionsTreeView && viewItem == userCollection.item",
          "group": "a@2"
        }
      ]
    },
    "configuration": {
      "title": "API Tester",
      "properties": {
        "api-tester.customMethods": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Custom HTTP methods (e.g. PROPFIND, REPORT). Must be in uppercase."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/postman-collection": "^3.5.11",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@types/styled-components": "^5.1.36",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "buffer": "^6.0.3",
    "eslint": "^9.39.1",
    "file-loader": "^6.2.0",
    "path-browserify": "^1.0.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "url": "^0.11.4",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "form-data": "^4.0.5",
    "postman-code-generators": "^2.1.0",
    "postman-collection": "^5.2.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-spinners": "^0.17.0",
    "styled-components": "^6.1.19",
    "use-debounce": "^10.0.6",
    "zustand": "^5.0.9"
  }
}
